@model EntityFramework.Models.ViewModels.NewsViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SportClubs.FirstOrDefault().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportClubs.FirstOrDefault().Subscriptions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SportClubs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                    @foreach (var subs in item.Subscriptions) {

                        <p>Fan Id: @subs.FanId</p>
                        <br />
                        <p>Sport Club Id: @subs.SportClubId </p>
                        <br />

                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
